{
    "id": "org.kde.rkward",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.6",
    "command": "rkward",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=network",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name" : "R",
            "buildsystem" : "autotools",
            "config-opts" : [ "--enable-R-shlib=yes" ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://cloud.r-project.org/src/base/R-4/R-4.3.3.tar.gz",
                    "sha256" : "80851231393b85bf3877ee9e39b282e750ed864c5ec60cbd68e6e139f0520330",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4150,
                        "stable-only": true,
                        "url-template": "https://cloud.r-project.org/src/base/R-4/R-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kate",
            "buildsystem": "cmake-ninja",
            "sources": [ { "type": "git", "url": "https://invent.kde.org/utilities/kate.git", "branch": "master" } ]
        },
        {
            "buildsystem": "cmake",
            "name": "rkward",
            "sources": [
                {
                "type": "dir",
                "path": "."
                }
            ]
        }
    ]
}
