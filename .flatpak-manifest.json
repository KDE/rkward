{
    "id": "org.kde.rkward",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.10",
    "command": "rkward",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=network",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "R",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-R-shlib=yes"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://cloud.r-project.org/src/base/R-4/R-4.5.2.tar.gz",
                    "sha256": "0d71ff7106ec69cd7c67e1e95ed1a3cee355880931f2eb78c530014a9e379f20",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4150,
                        "stable-only": true,
                        "url-template": "https://cloud.r-project.org/src/base/R-4/R-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kate",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/utilities/kate.git",
                    "branch": "master"
                }
            ]
        },
        {
            "buildsystem": "cmake",
            "name": "rkward",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
